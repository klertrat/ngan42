FLAGS = -Wall -Wextra -Werror
NAME = libft.a
SRCS = ft_strlen.c\
	ft_memmove.c\
	ft_strrchr.c\
	ft_substr.c\
	ft_strjoin.c\
	ft_strtrim.c

OBJS = $(SRCS:.c=.o)

all: $(NAME)

%o: %c
	gcc $(FLAGS) -c $< -o $@

$(NAME): $(OBJS)
	ar -rcs $(NAME) $(OBJS)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: clean fclean all re
